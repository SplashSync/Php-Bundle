
{% macro TestResult ( Result, Title, Log ) %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>
                {% if Result %}
                    <span class="btn btn-lg btn-success"> <i class="fa fa-3x fa-check"></i></span>
                {% else %}
                    <span class="btn btn-lg btn-danger"> <i class="fa fa-3x fa-times"></i></span>
                {% endif %}
                    {{ Title }}
                </h1>
            </div>
            <p>
                {{ Log | raw }}
            </p>
        </div>
    </div>
{% endmacro %}

{% macro Items ( List, Title ) %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>
                    <span class="btn btn-lg btn-info" style="font-size: 36px"> <b>{{ List | length }}<b></span>
                    {{ Title }}
                </h1>
            </div>
                
            <table class="table table-striped table-hover table-bordered">
                <tbody>
                    {% for Item in List %}
                    <tr>
                      <td> {{ Item }} </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>            
            
        </div>
    </div>
{% endmacro %}

{% macro ConfigItems ( List, Title ) %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>
                    <span class="btn btn-lg btn-warning" style="font-size: 36px"> <b>{{ List | length }}<b></span>
                    {{ Title }}
                </h1>
            </div>
                
            <table class="table table-striped table-hover table-bordered">
                <tbody>
                    {% for Key, Item in List %}
                    <tr>
                      <td> {{ Key }} </td>
                      <td> {{ Item }} </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>            
            
        </div>
    </div>
{% endmacro %}