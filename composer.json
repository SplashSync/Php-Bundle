{
    "name":                 "splash/php-bundle",
    "description":          "Splash Core Bundle for Symfony Applications",

    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\Bundle\\":     "src/",
            "Splash\\Local\\":      "src/Local/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "src/Tests" },
        "classmap": [ "app/Kernel.php" ],
        "files": [ 
            "vendor/splash/phpcore/inc/Splash.Inc.php",
            "src/Tests/KernelTestCase.php" 
        ]
    },
    
    
    "require": {
        "php":                                          "^7.0",
        "splash/phpcore":                               "dev-master"
    },
    
    "require-dev": {
        
        "splash/faker":                                 "dev-master",

        "phpunit/phpunit":                              ">6",
        
        "symfony/symfony":                              "~3.4",
        "symfony/monolog-bundle":                       "*",
        "symfony/phpunit-bridge":                       "*",
        
        "doctrine/orm":                                 "^2.4",
        "doctrine/doctrine-bundle":                     "^1.9",
        
        "sensio/distribution-bundle":                   ">=5",
        "sensio/framework-extra-bundle":                ">=3",
        
        "composer/composer":                            "^1.5",
        "j13k/yaml-lint":                               "^1.1",
        "jakub-onderka/php-parallel-lint":              "^1.0",
        "phpmd/phpmd":                                  "^2.6",
        "phpro/grumphp":                                "^0.14.0",
        "sclable/xml-lint":                             "^0.2.4",
        "sebastian/phpcpd":                             ">3.0",
        "seld/jsonlint":                                "^1.7",
        "sensiolabs/security-checker":                  "^5.0",
        "squizlabs/php_codesniffer":                    "^3.2",
        "escapestudios/symfony2-coding-standard":       "^3.4",
        "friendsofphp/php-cs-fixer":                    "*",        
        
        "phpstan/phpstan-shim":                         "^0.10",
        "phpstan/phpstan-doctrine":                     "^0.10",
        "phpstan/phpstan-phpunit":                      "^0.10",
        "phpstan/phpstan-symfony":                      "^0.10"
    }  
    
}
