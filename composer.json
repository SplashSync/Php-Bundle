{
    "name": "splash/php-bundle",
    "description": "Splash Core Bundle for Symfony 2 Applications",

    "license": "GPL",

    "autoload": {
        "psr-4": { 
            "Splash\\Bundle\\":     "",
            "Splash\\Local\\":      "Local/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]        
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "Tests/" }
    },

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "require": {
        "php":                      "^5.6|^7.0",
        "splash/phpcore":           "dev-master"
    },
    
    "require-dev": {
        "phpunit/phpunit": "*"
    }
    
    
}