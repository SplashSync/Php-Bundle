{
    "name":                 "splash/php-bundle",
    "description":          "Splash Core Bundle for Symfony Applications",

    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\Bundle\\":     "src/",
            "Splash\\Local\\":      "src/Local/",
            "Splash\\Tests\\":      "phpunit/"
        },
        "files": [
            "phpunit/bootstrap.php"
        ]
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Bundle\\Tests\\": "tests" }
    },

    "require": {
        "php":                                          "^8.1",
        "splash/phpcore":                               "^3.0.x-dev",
        "webmozart/assert":                             "^1.0",
        "psr/simple-cache":                             "^1.0 || ^2.0"
    },
    
    "require-dev": {
        "ext-pdo_sqlite":                               "*",
        "badpixxel/php-sdk":                            "^2.0|^3.0",

        "splash/faker":                                 "3.0.x-dev",
        "splash/validator":                             "1.0.x-dev",

        "symfony/http-kernel":                          "^5.4|^6.4|^7.0",
        "symfony/security-core":                        "^5.4|^6.4|^7.0",
        "symfony/security-bundle":                      "^5.4|^6.4|^7.0",
        "symfony/twig-bundle":                          "^5.4|^6.4|^7.0",
        "symfony/translation":                          "^5.4|^6.4|^7.0",
        "symfony/routing":                              "^5.4|^6.4|^7.0",
        "symfony/form":                                 "^5.4|^6.4|^7.0",
        "symfony/browser-kit":                          "^5.4|^6.4|^7.0",
        "symfony/runtime":                              "^5.4|^6.4|^7.0",
        "symfony/flex":                                 "^1.0|^2.0|^7.0",
        "symfony/monolog-bundle":                       "*",
        "symfony/phpunit-bridge":                       "*",

        "doctrine/orm":                                 "^2.4",
        "doctrine/annotations":                         "^1.0|^2.0",
        "doctrine/doctrine-bundle":                     "^1.9|^2.0",

        "monolog/monolog":                              "^2.0|^3.0",

        "phpunit/phpunit":                              "^8.0|^9.0"
    },
    
    "archive": {
        "exclude": ["/bin", "/ci", "/docker", "/tests"]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp":            true,
            "phpro/grumphp-shim":       true,
            "symfony/runtime":          true,
            "symfony/flex":             true
        }
    },
    "extra": {
        "public-dir": "tests/public"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --relative": "symfony-cmd",
            "doctrine:schema:update --force --complete --no-interaction --no-debug": "symfony-cmd",
            "find var/cache/dev/*.xml | while read -r i; do cp \"$i\" var/cache/dev/testContainer.xml; done": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
