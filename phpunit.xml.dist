<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "true"
    stopOnFailure               = "true"
    syntaxCheck                 = "false"
    bootstrap                   = "app/autoload.php" 
    verbose                     = "false"
    debug                       = "false"    
    timeoutForLargeTests        = "120"  
>

    <testsuites>
        <testsuite name="All">
            <directory>Tests/*</directory>
            <directory>vendor/splash/php-bundle/Tests/*</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>Tests</directory>
            <directory>vendor/splash/php-bundle</directory>
            <exclude>
                <directory>vendor</directory>
                <directory>endor/splash/phpcore</directory>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <server name="KERNEL_DIR" value="app" />
        <env    name="SYMFONY_DEPRECATION_HELPER" value="disabled" />
        <server name="SERVER_NAME" value="http://localhost:8000/app.php"/>        
        <const  name="SPLASH_DEBUG" value="true" />
    </php>
    
</phpunit>
